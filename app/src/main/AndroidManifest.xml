<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.vyfe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="userLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RecordActivity"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".activity.InfoVideoActivity"
            android:screenOrientation="userLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.SelectVideoActivity"
            android:screenOrientation="userLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".activity.ConnexionActivity"
            android:screenOrientation="userLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".activity.MyVideosActivity"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".activity.CreateSessionActivity"
            android:screenOrientation="userLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.PlayVideoActivity"
            android:screenOrientation="userLandscape" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:screenOrientation="userLandscape"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".activity.CreateGridActivity"
            android:screenOrientation="userLandscape"
            android:windowSoftInputMode="stateHidden|adjustPan" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>
