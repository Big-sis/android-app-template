<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/style_radius">

    <LinearLayout
        android:id="@+id/title_video_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
      >

        <ImageView
            android:id="@+id/play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/moviewhite" />

        <TextView
            android:id="@+id/title_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/title_video"
            android:textColor="@color/colorWhiteTwo"
            app:fontFamily="@font/roboto_bold" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.7"
            android:text="@string/available"
            android:textColor="@color/colorWhiteTwo"
            app:fontFamily="@font/roboto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_device"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_device"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="8dp"
            android:alpha="0.8"
            android:background="@drawable/smarth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_available_device"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/nodispo"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/iv_device"
            app:layout_constraintEnd_toEndOf="@+id/iv_device" />

        <ImageView
            android:id="@+id/iv_plateforme"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/laptop"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/iv_available_plateforme"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/dispo"
            android:alpha="0.8"
            app:layout_constraintBottom_toBottomOf="@+id/iv_plateforme"
            app:layout_constraintEnd_toEndOf="@+id/iv_plateforme" />

    </android.support.constraint.ConstraintLayout>
    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/video_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timestamp"
        android:textColor="@color/colorWhiteTwo"
        app:fontFamily="@font/roboto"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhiteTwo"
        app:fontFamily="@font/roboto"
        android:text="Duree"
        android:layout_marginBottom="8dp"/>
</LinearLayout>